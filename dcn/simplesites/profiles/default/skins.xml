<?xml version="1.0"?>
<!-- This file holds the setup configuration for the portal_skins tool -->

<object name="portal_skins">

 <object name="ssfixups_classic"
    meta_type="Filesystem Directory View"
    directory="dcn.simplesites:skins/ssfixups_classic"/>
 <object name="ssfixups_sunburst"
    meta_type="Filesystem Directory View"
    directory="dcn.simplesites:skins/ssfixups_sunburst"/>

 <skin-path name="Sunburst Theme">
  <layer name="ssfixups_sunburst"
     insert-after="custom"/>
 </skin-path>
 <skin-path name="Plone Classic Theme">
  <layer name="ssfixups_classic"
     insert-after="custom"/>
 </skin-path>

</object>
