<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="dcn.simplesites">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

    <div tal:condition="context/text" tal:replace="structure context/text/output">
        Body text
    </div>

    <tal:newsitems  tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                                plone_view context/@@plone;
                                getIcon nocall:plone_view/getIcon;"
                    tal:repeat="obj view/published_news_items">
    <dd tal:define="oddrow repeat/obj/odd;
                    item_icon python:getIcon(obj);"
         tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">

        <a href=""
           class="tile"
           tal:attributes="href obj/getURL;
                           title obj/Description">
            <img tal:replace="structure item_icon/html_tag" />
            <span tal:replace="obj/pretty_title_or_id">
            Plone 2.1 announced!
            </span>
         </a>
            <span class="portletItemDetails"
                  tal:content="python:toLocalizedTime(obj.Date)">May 5</span>

    </dd>
    </tal:newsitems>

        <a href=""
           tal:attributes="href view/all_news_link"
           i18n:translate="box_more_news_link">
          More news&hellip;
        </a>

  </metal:content-core>
</metal:main>

</body>
</html>

